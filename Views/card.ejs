<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/payment_method.css" />
    <link rel="stylesheet" href="/css/index.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <title>Empower Play</title>
</head>

<body class="whiteBody">
    <header class="paymentMethodHeader">
        <div class="colorLogoContainer d-flex align-items-center justify-content-around closeableHeader">
            <a href="/payment_method"><i class="bi bi-x-lg"></i></a>
            <h1>Add Card</h1>
            <i class="bi bi-person-circle"></i>
        </div>
        <input type="checkbox" id="profileCheck" />
        <%- include('components/header.ejs') %>

    </header>
    <main class="homePageMainContainer h-75">
        <form action="/create-payment" method="post" class=" h-100 d-flex flex-column justify-content-between">
            <div class="cardDetailsContainer">
                <div class="addCard">
                    <label for="cardNumber">Card number</label>
                    <div class="inputContainer px-2 d-flex align-items-center"><i
                            class="bi bi-credit-card-2-front-fill fs-3"></i>
                            <input type="number" required name="cardNumber" placeholder="4344 **** **** **** 7744"></div>

                </div>
                <div class="cardInfoCont d-flex align-items-center">
                    <div class="expiryContainer d-flex flex-column align-items-center">
                        <label for="expiryDate">Expiry Date</label>
                        <div class="inputContainer">
                            <input type="date" placeholder="MM/YY"  required name="expiryDate">
                        </div>
                    </div>
                    <div class="cvvContainer d-flex flex-column align-items-center">
                        <label for="cvv">CVV</label>
                        <div class="inputContainer"><input type="number" required placeholder="123" name="cvv"></div>
                    </div>
                </div>
            </div>
            <button type="submit" class="signupBtn">Add</button>
        </form>
    </main>
    <%- include('components/footer.ejs') %>


        <script>
            let profileCheck = document.getElementById("profileCheck");
            let profileListMenu = document.querySelector(".profileListMenu");;
            profileCheck.addEventListener("click", () => {
                if (profileCheck.checked) {
                    profileListMenu.style.visibility = "visible";
                } else {
                    profileListMenu.style.visibility = "hidden";
                }
            });
        </script>
</body>

</html>