    <title>Empower Play</title>
</head>

<body class="whiteBody">
    <header>
        <div class="colorLogoContainer d-flex align-items-center justify-content-around closeableHeader">
            <i class="bi bi-x-lg"></i>
            <h1>Add Card</h1>
            <i class="bi bi-person-circle"></i>
        </div>
    </header>
    <main class="homePageMainContainer h-75 d-flex flex-column justify-content-between">
        <div class="cardDetailsContainer">
        <div class="addCard">
            <label for="cardNumber">Card number</label>
            <div class="inputContainer px-2 d-flex align-items-center"><i
                    class="bi bi-credit-card-2-front-fill fs-3"></i><input type="text"></div>

        </div>
        <div class="cardInfoCont d-flex align-items-center">
            <div class="expiryContainer d-flex flex-column align-items-center">
                <p>Expiry Date</p>
                <div class="inputContainer"><input type="text" placeholder="MM/YY"></div>
            </div>
            <div class="cvvContainer d-flex flex-column align-items-center">
                <p>CVV</p>
                <div class="inputContainer"><input type="number" placeholder="123"></div>
            </div>
        </div>
        </div>
        <a href="" class="signupBtn">Add</a>
    </main>
    <footer class="footerSection">
        <div class="footerIconContainer">
            <i class="bi bi-house"></i>
            <small>Home</small>
        </div>
        <div class="footerIconContainer">
            <i class="bi bi-calendar-range"></i>
            <small>booking</small>
        </div>
        <div class="footerIconContainer">
            <i class="bi bi-exclamation-circle"></i>
            <small>About Us</small>
        </div>
        <div class="footerIconContainer">
            <i class="bi bi-telephone"></i>
            <small>Contact Us</small>
        </div>
        <div class="footerIconContainer">
            <i class="bi bi-database"></i>
            <small>Services</small>
        </div>
    </footer>
</body>

