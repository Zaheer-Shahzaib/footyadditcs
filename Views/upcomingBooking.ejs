<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <!-- icon -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <link rel="stylesheet" href="/css/upcomingBookings.css" />
    <link rel="stylesheet" href="/css/index.css" />
    <title>Empower Play</title>
  </head>

  <body>
    <main>
      <div class="upcomingBookingBackground d-flex flex-column justify-content-between h-100">
        <div class="logo-container">
          <img src="/images/logo.png" class="logoImage" alt="logo" />
        </div>
        <div class="gamesList d-flex flex-column h100vh">
          <h1 class="p-2 text-center text-decoration-underline">Upcoming</h1>
          <h3 class="mt-3 mx-2">Upcoming Empower Bookings</h3>
          <a href="" class="text-decoration-none text-end mb-4">View Past bookings</a>
          <div class="gameDetailContainer">
            <div class="gameDetailsContBtns mb-4">
                <span class="float-start">John Doe</span>
              <button class="cancelBtn">Cancel</button>
              <a href="/reschedule">Edit</a>
            </div>
            <div class="d-flex align-items-center">
              <div class="gameDate">
                <p
                  >Wed <br />
                  8/5</p
                >
              </div>
              <div class="gameAddress mx-2">
                <p>Astron Uni Football Pitch</p>
                <p class="text-end">6-7 pm</p>
                <p>7-aside by @EmpowerPlayStaff</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="cancelBookingAlert">
        <h2>You're about to cancel this booking</h2>
        <button class="signupBtn my-4">Yes, Cancel this booking</button>
        <button class="signupBtn cancelAlertDialouge">No, I'll keep this booking</button>
      </div>
    </main>

    <script>
      let cancelBtn = document.querySelector(".cancelBtn");
      let cancelAlert = document.querySelector(".cancelBookingAlert");
      let upcomingMainContainer = document.querySelector(".upcomingBookingBackground");
      let cancelAlertDialouge = document.querySelector(".cancelAlertDialouge");
      cancelBtn.addEventListener("click", ()=>{
        cancelAlert.style.visibility = "visible";
        upcomingMainContainer.style.filter = "brightness(0.7)";
      })
      cancelAlertDialouge.addEventListener("click", ()=>{
        cancelAlert.style.visibility = "hidden";
         upcomingMainContainer.style.filter = "none";
      })
    </script>
  </body>
</html>
